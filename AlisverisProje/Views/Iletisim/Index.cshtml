@model AlisverisProje.Models.IletisimForm

@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>İletişim</h1>

<h4>İletişim Formu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdinizSoyadiniz" class="control-label"></label>
                <input asp-for="AdinizSoyadiniz" class="form-control" />
                <span asp-validation-for="AdinizSoyadiniz" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="Telefon" class="control-label"></label>
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Konu" class="control-label"></label>
                <input asp-for="Konu" class="form-control" />
                <span asp-validation-for="Konu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mesaj" class="control-label"></label>
                <input asp-for="Mesaj" class="form-control" />
                <span asp-validation-for="Mesaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Mail Gönder" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
